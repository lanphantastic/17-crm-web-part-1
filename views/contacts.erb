<header>
  <nav class="nav-wrapper">
    <ul>
      <li><a href="/contacts/new">New</a></li>
    </ul>
  </nav>
</header>

<div class="total_num_of_contact">

  <p>There are

    <!-- number count -->
    <span class="count-number">
      <%= @all_contacts.count %>
    </span> contacts

  </p>

</div>

<ul class="main-contact-list">

  <!-- list out all of the contacts information -->
  <% @all_contacts.each do |contact| %>

  <li>

    <!-- Name and email -->
    <h2><a href="/contacts/<%= contact.id %>"><%= contact.full_name %></a> (<%= contact.email %>)</h2>

    <!-- link -->
    <div class="edit-delete">
      <a href="#">Edit</a> |
      <a href="#">Delete</a>
    </div>

  </li>

  <% end %>

</ul>
